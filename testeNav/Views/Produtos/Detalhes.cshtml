@model ProdutoModel

<h2>@Model.Nome</h2>

<p>@Model.Descricao</p>

<p>Preço: @Model.Preco.ToString("C")</p>

<img src="/img/" style="max-width: 200px;" />

<br />

<a href="@Url.Action("AdicionarAoCarrinho", new { id = Model.Id })" class="btn btn-success">Adicionar ao Carrinho</a>
<a href="@Url.Action("Index")" class="btn btn-secondary">Voltar à lista de produtos</a>